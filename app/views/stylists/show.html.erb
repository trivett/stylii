<div class="stylist_profile">

<div class="stylist_photo"><img src="<%= @stylist.photo_url %>" alt=""></div>

<div class="stylist_info">
  <h1><%= @stylist.name %></h1>

  <p>Age: <%= @stylist.age %></p>

  <p>Stylii Rating: <%= @rating %></p>

  <p>Price for male haircuts: <%= @stylist.male_price %></p>


  <p>Price for female haircuts: <%= @stylist.female_price %></p>

  <p>Specialty: <%= @stylist.specialty %></p>

  <p>Day off: <%= @stylist.day_off %></p>

  <p>Normal hours: <%= @stylist.starts_work_at.strftime("%I:%M %p") %> to <%= @stylist.ends_work_at.strftime("%I:%M %p") %></p>
  </div>

<% if current_client %>
<p><%= link_to("Book an appointment with #{@stylist.name}", "/appointments/new?stylist_id=#{@stylist.id}") %></p>
<% end %>

</div>
<div class="stylist_calendar">
 <h3>Calendar:</h3>


<%= calendar @stylist_appointments, {:prev_text=>"prev", :next_text=>"next"} do |appointment| %>
  <div><%= appointment.start_time.strftime("%I:%M %p") %> - <%= appointment.end_time.strftime("%I:%M %p") %></div>
<% end %>
</div>

<div class="stylist_actions">
  <% if current_stylist == @stylist %>
     <p><%= link_to("Edit your information", edit_stylist_path) %></p>
     <p><%= link_to 'Quit your job', @stylist, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
  <% end %>
</div>
