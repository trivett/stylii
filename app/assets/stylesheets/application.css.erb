@import url(http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,800,600,300,700);

body {
  font-family: 'Open Sans', sans-serif;
}


#container {
  width:  960px;
  margin: 0 auto;
  padding: 10px 50px;
}

#nav li {
  min-height: inherit;
  display: inline;
  list-style: none;
  padding: 20px;
}

span{
  display: inline-block;
}
.salonlist {
  height: 300px;
  max-width: 300px;
  border: 1px solid #ccc;
  display: inline;
  margin: 50px;
}

.calendar td { height: 100px; width: 14.28%; }

td {
  min-width: 50px;
  min-height: 50px;
  border: 1px solid #ccc;
}

.day_number {
  margin-top: 0;
}

img {max-height: 200px;
}
