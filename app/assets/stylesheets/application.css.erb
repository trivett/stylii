

@import url(http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,800,600,300,700);

body {
  font-family: 'Open Sans', sans-serif;
}


#container {
  width:  960px;
  margin: 0 auto;
  padding: 10px 50px;
}

#nav li {
  min-height: inherit;
  display: inline;
  list-style: none;
  padding: 20px;
}

span{
  display: inline-block;
}
.salon {
  max-width: 300px;
  height: 250px;
  padding: 15px;
  border: 1px solid #ccc;
  box-shadow: 5px 10px 5px #888888;
  display: inline-block;
  margin: 50px;
}

.calendar td { height: 100px; width: 14.28%; }

td {
  min-width: 50px;
  min-height: 50px;
  border: 1px solid #ccc;
}

.day_number {
  margin-top: 0;
}

img {
  max-height: 200px;
  padding: 0 10px;
}

li {
  list-style: none;
}

#add-salon {
  float: right;
}

.stylist_photo {
  float:right;
  margin: 10px;
}
.stylist_info {
  width: 400px;
  display: block;
  margin: 10px;
  padding: 10px;
  border: 1px solid #ccc;
}
.stylist_calendar {
  margin: 10px;
}
.stylist_profile {
  margin: 5px;
  height: 400px;
}

.stylist_photo{
  max-height: 400px;
}
.stylist_actions{
  margin: 5px;
}

.previous-month, .next-month {
  margin: 10px;
}

.stylist_calendar h2{
  text-align: center;
}
